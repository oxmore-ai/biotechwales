<div class="row justify-content-center">
    <div class="col-md-8">
        <h1 class="mb-4">Submit Your Company</h1>
        
        <% if (locals.error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <div class="card">
            <div class="card-body">
                <form action="/submit" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                    <div class="mb-4">
                        <label class="form-label">Company Logo</label>
                        <div class="logo-upload-container" id="logoUploadContainer">
                            <div id="logoPreviewContainer" style="display: none;">
                                <img id="logoPreview" class="logo-preview mb-3">
                                <br>
                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeLogo()">Remove Logo</button>
                            </div>
                            <div id="logoUploadPrompt">
                                <i class="fas fa-cloud-upload-alt fa-2x mb-2"></i>
                                <p class="mb-1">Click to upload your company logo</p>
                                <p class="text-muted small">PNG, JPG up to 2MB</p>
                            </div>
                            <input type="file" id="logo" name="logo" accept="image/png,image/jpeg" class="d-none" onchange="previewLogo(this)">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="name" class="form-label">Company Name *</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                        <div class="invalid-feedback">
                            Please provide your company name.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="oneliner" class="form-label">One-liner *</label>
                        <input type="text" class="form-control" id="oneliner" name="oneliner" 
                               placeholder="Briefly describe what your company does in one sentence"
                               maxlength="255" required>
                        <div class="invalid-feedback">
                            Please provide a brief description of what your company does.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Company Description *</label>
                        <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
                        <div class="invalid-feedback">
                            Please provide a description of your company.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="website" class="form-label">Website *</label>
                        <input type="url" class="form-control" id="website" name="website" required>
                        <div class="invalid-feedback">
                            Please provide a valid website URL.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location in Wales *</label>
                        <input type="text" class="form-control" id="location" name="location" required>
                        <div class="invalid-feedback">
                            Please provide your company's location.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="sector" class="form-label">Biotech Sector *</label>
                        <select class="form-select" id="sector" name="sector" required>
                            <option value="">Choose a sector...</option>
                            <option value="Pharmaceuticals">Pharmaceuticals</option>
                            <option value="Medical Devices">Medical Devices</option>
                            <option value="Diagnostics">Diagnostics</option>
                            <option value="Research Tools">Research Tools</option>
                            <option value="Digital Health">Digital Health</option>
                            <option value="Agricultural Biotech">Agricultural Biotech</option>
                            <option value="Industrial Biotech">Industrial Biotech</option>
                            <option value="Other">Other</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a sector.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="contact_email" class="form-label">Contact Email *</label>
                        <input type="email" class="form-control" id="contact_email" name="contact_email" required>
                        <div class="invalid-feedback">
                            Please provide a valid email address.
                        </div>
                    </div>

                    <div class="mb-3">
                        <small class="text-muted">* Required fields</small>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Company</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- contentFor('script') %>
<script>
function previewLogo(input) {
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        
        reader.onload = function(e) {
            document.getElementById('logoPreview').src = e.target.result;
            document.getElementById('logoPreviewContainer').style.display = 'block';
            document.getElementById('logoUploadPrompt').style.display = 'none';
        }
        
        reader.readAsDataURL(input.files[0]);
    }
}

function removeLogo() {
    document.getElementById('logo').value = '';
    document.getElementById('logoPreviewContainer').style.display = 'none';
    document.getElementById('logoUploadPrompt').style.display = 'block';
}

document.getElementById('logoUploadContainer').addEventListener('click', function() {
    document.getElementById('logo').click();
});

// Form validation
(function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.classList.add('was-validated')
        }, false)
    })
})()
</script> 